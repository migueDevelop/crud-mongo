<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <form action="/task/add" method="post">

    <h3>Add a task</h3>

    <div>
      <label for="title">Write a title:</label>
      <input type="text" name="title" placeholder="Title" class="form-control rounded-0 bg-dark text-white" />
    </div>
    <div>
      <label for="description">Write a description:</label>
      <textarea name="description" placeholder="Description"
        class="form-control rounded-0 bg-dark text-white"></textarea>
    </div>
    <button class="btn btn-light btn-sm mt-4">Add</button>

  </form>
</div>